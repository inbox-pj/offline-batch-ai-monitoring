# =============================================================================
# OFFLINE BATCH AI MONITORING - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and customize for your environment
# All values are optional - defaults are provided for development
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=offline-batch-ai-monitoring
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# DATABASE (PostgreSQL for production, H2 for development)
# =============================================================================
DATABASE_URL=jdbc:postgresql://localhost:5432/offline_batch_ai
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
# For development with H2 (default):
# DATABASE_URL=jdbc:h2:mem:offline_batch_ai
# DATABASE_DRIVER=org.h2.Driver

# =============================================================================
# OLLAMA AI CONFIGURATION
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=120
OLLAMA_CHAT_TEMPERATURE=0.3
OLLAMA_CHAT_MAX_TOKENS=4096

# =============================================================================
# AI PREDICTION SETTINGS
# =============================================================================
AI_PREDICTION_ENABLED=true
AI_ANALYSIS_WINDOW_HOURS=24
AI_FORECAST_HORIZON_HOURS=6
AI_CONFIDENCE_THRESHOLD=0.75
AI_MAX_DAILY_REQUESTS=1000
AI_MAX_DAILY_COST_CENTS=10000

# =============================================================================
# AI CACHING
# =============================================================================
AI_CACHE_ENABLED=true
AI_CACHE_TTL_MINUTES=5

# =============================================================================
# AI FALLBACK
# =============================================================================
AI_FALLBACK_ENABLED=true
AI_FALLBACK_CONFIDENCE=0.7

# =============================================================================
# AI SCHEDULER
# =============================================================================
AI_SCHEDULER_ENABLED=true
AI_SCHEDULER_INTERVAL_MS=300000

# =============================================================================
# SECURITY
# =============================================================================
API_SECURITY_ENABLED=false
API_KEYS=demo-key-123,demo-key-456
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_RPM=100

# =============================================================================
# OBSERVABILITY - PROMETHEUS
# =============================================================================
PROMETHEUS_ENABLED=true
METRICS_ENV=development

# =============================================================================
# OBSERVABILITY - TRACING (OpenTelemetry/Jaeger)
# =============================================================================
TRACING_ENABLED=true
TRACING_SAMPLE_PROBABILITY=1.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# =============================================================================
# OBSERVABILITY - AI METRICS
# =============================================================================
AI_METRICS_ENABLED=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING_AI=DEBUG

# =============================================================================
# CONNECTION POOL
# =============================================================================
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_CONNECTION_TIMEOUT=30000

# =============================================================================
# CIRCUIT BREAKER
# =============================================================================
CB_FAILURE_THRESHOLD=60
CB_WAIT_DURATION=30s
CB_SLIDING_WINDOW=20

# =============================================================================
# RETRY
# =============================================================================
RETRY_MAX_ATTEMPTS=3
RETRY_WAIT_DURATION=1s

