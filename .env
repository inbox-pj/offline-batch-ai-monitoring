# Environment Configuration

# OpenAI API Key (Required for AI predictions)
OPENAI_API_KEY=your-openai-api-key-here

# AI Configuration
AI_PREDICTION_ENABLED=true
AI_PREDICTION_MAX_DAILY_REQUESTS=1000
AI_PREDICTION_MAX_DAILY_COST_CENTS=10000

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=offline_batch_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Spring Profiles
SPRING_PROFILES_ACTIVE=dev

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_CARDCONNECT=DEBUG

# Health Check Configuration
OFFLINE_BATCH_HEALTH_ENABLED=true
OFFLINE_BATCH_HEALTH_OLD_BATCH_THRESHOLD_HOURS=24
OFFLINE_BATCH_PROCESSOR_HEALTH_ENABLED=true

# Monitoring
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# Cache Configuration
SPRING_CACHE_TYPE=caffeine
SPRING_CACHE_CAFFEINE_SPEC=maximumSize=500,expireAfterWrite=300s

# AI Prompt Version
AI_PROMPT_VERSION=v2

# Notification (Optional)
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_SLACK_WEBHOOK_URL=

# Rate Limiting
AI_RATE_LIMIT_ENABLED=true
AI_RATE_LIMIT_PERMITS_PER_SECOND=10

